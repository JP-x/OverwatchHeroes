<!-- Include Hero Collection-->
@model OverwatchHeroes.Models.Hero[]

@{
    ViewBag.Title = "Overwatch Heroes";
}

    @foreach (var hero in Model)
    {
        <div class="row">
            <div class="col s12 m12">
                <div class="card horizontal">
                    <div class="card-image valign-wrapper">
                        <img src="images/@hero.IconName" alt="@hero.Name" >
                    </div>
                    <div class="card-stacked">
                        <div class="card-content">
                            <h2 class="header">@hero.Name</h2>
                            <p>@hero.Summary</p>
                        </div>
                        <div class="card-action">
                            <a href="#">This is a link</a>
                            <!--attempt to link to another action-->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

