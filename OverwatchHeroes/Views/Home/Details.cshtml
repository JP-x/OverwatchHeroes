<!-- Include Hero Collection-->
@model OverwatchHeroes.Models.Hero[]

@{
    ViewBag.Title = "Detail";
}

@{var exHero = Model.ElementAt(2);}
<div class="section"></div>
<div class="parallax-container">
    <div class="parallax"><img src="~/images/@exHero.ArtName" class="parallax-img change-parallaximg-on-small-only change-parallaximg-on-medium-only change-parallaximg-on-large-only"></div>
</div>

<div class="section">
    <!--
    <div class="row center">
        <img src="~/images/@exHero.IconName" class="hero-image circle change-heroimg-on-small-only">
    </div>
    -->
    <div class="row">
        <div class="col s12 m12 center"><span class="OWtext_l hero_name">@exHero.Name</span></div>
    </div>
</div>

<div class="row center">
<span class="OWtext_l">Difficulty:</span>
    @{var diff_counter = 0;}
    @for (int i = 0; i < 3; i++)
    {
        if (diff_counter < exHero.Difficulty)
        {
            <i class="material-icons medium material-icon-valign">star</i>
            diff_counter++;
        }
        else
        {
            <i class="material-icons medium material-icon-valign">star_border</i>
        }
    }
</div>

<div class="section info-section">
    
    <!-- Summary Block -->
    <div class="row">
        <div class="col s12 m6">
            <span class="OWtext_m">Summary</span><hr />
            <div class="row">
                <div class="col s12 m12 left info-text">
                    @exHero.Summary
                </div>
            </div>
        </div>

        <div class="col s12 m6">
            <span class="OWtext_m">Role:  @exHero.Role</span><hr />
            <div class="row">
                <div class="col s12 m12 left info-text">
                    <img src="~/images/@exHero.RoleName" class="role-image" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m12">
            <span class="OWtext_m">Hit Points</span><hr />


            <div class="row">
                <div class="col s12 m12 left OWtext_m">
                   Health: @exHero.Hp <meter value="@exHero.Hp" max="@exHero.GetFullHP" class="health-meter"></meter>
                </div>
            </div>

            @if(exHero.Shield != 0)
            {
            <div class="row">
                <div class="col s12 m12 left  OWtext_m">
                    Shield: @exHero.Shield <meter value="@exHero.Shield" max="@exHero.GetFullHP"></meter>
                </div>
            </div>
            }

            @if(exHero.Armor != 0)
            {
            <div class="row">
                <div class="col s12 m12 left  OWtext_m">
                    Armor: @exHero.Armor <meter value="@exHero.Armor" max="@exHero.GetFullHP" class="armor-meter"></meter>
                </div>
            </div>
            }


        </div>
    </div>


</div>


<div class="section">
    <div class="row center"><span class="OWtext_l change-text-on-large-only ">Abilities</span></div>
</div>
<div class="section skill-section">

    <div class="row">
        @foreach (var skill in exHero.Skills)
        {
            <div class="col s12 m4 center-align">
                <div class="card small">
                <div class="row"><img src="~/images/@exHero.GetSkillName(skill.AbilityID)" class="skill-image change-heroimg-on-small-only center" /></div>
                <div class="OWtext_m change-text-on-med-only change-text-on-large-only card-title">@skill.Name</div>
                <div class="card-content skill-text">@skill.Description</div>
            </div>
                </div>
        }
    </div>
</div>